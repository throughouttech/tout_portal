<html>
  <head>
    <style >
   .row {
    margin-right: -15px;
    margin-left: -15px;
    font-size: 30px;
}
     </style>
  
  </head>

  <body>
<div class="container">
  <div class="row">
    <div class="col-sm-6 text-left"> Leave Type </div>
    <div class="col-sm-6 text-right"><%= link_to "New",new_admin_leave_type_path %></div><br />
  </div>
  <div class="table-responsive">          
  <table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Active</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
    <% @leave_type.each do |leave| id = leave.id %>
      <tr>
        <td><%= leave.name %></td>
        <td><%= leave.description %></td>
        <td><%= leave.active %></td>
        <td><%= link_to 'Destroy', admin_leave_type_path(id),class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
        <%= link_to 'Update' , edit_admin_leave_type_path(id),class: 'btn btn-warning' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  </div>
</div>
 
  </body>

</html>
