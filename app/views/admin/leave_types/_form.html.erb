<div class="container">
  <div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      <%= form_for [:admin, @leave_type] do |f| %>
        <fieldset>
          <div class="form-group" >
            <label class="col-lg-6 control-label ">name:</label>
            <div class="col-lg-6 ">
              <%= f.text_field :name, autofocus: true, class: 'form-control input-lg' %>
            </div>
          </div>

          <div class="form-group" >
            <label class="col-lg-6 control-label ">Description:</label>
            <div class="col-lg-6 ">
              <%= f.text_field :description, autofocus: true, class: 'form-control input-lg' %>
            </div>
          </div>

          <div class="form-group" >
            <label class="col-lg-6 control-label ">active:</label>
            <div class="col-lg-6 ">
              <%= f.text_field :active, autofocus: true, class: 'form-control input-lg' %>
            </div>
          </div>
      </fieldset>
      </br>
      <button type="f.submit" class="btn btn-primary">Create Leave Type</button>
    <% end %>
  </div>
</div>
</br>
