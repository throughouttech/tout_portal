<div class="container">
  <div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
     <%= form_for [leave] do |f| %>
        <fieldset>
          <div class="form-group" >
            <label class="col-lg-6 control-label ">Type:</label>
            <%= f.select :leave_type_id, options_for_select(LeaveType.all.collect {|t| [t.name, t.id]}), :prompt => 'Select' %>
          </div>
          <div class="form-group" >
            <label class="col-lg-6 control-label ">Description:</label>
            <div class="col-lg-6 ">
              <%= f.text_field :description, autofocus: true, class: 'form-control input-lg' %>
            </div>
          </div>
           <div class="form-group" >
            <label class="col-lg-6 control-label ">Start Date:</label>
            <div class="col-lg-6 ">
              <%= f.date_field :start_at, autofocus: true, class: 'form-control input-lg' %>
            </div>
          </div>
           <div class="form-group" >
            <label class="col-lg-6 control-label ">End Date:</label>
            <div class="col-lg-6 ">
              <%= f.date_field :end_at, autofocus: true, class: 'form-control input-lg' %>
            </div>
          </div>

          <div class="form-group" >
            <label class="col-lg-6 control-label ">Leave for:</label>
            <%= f.select :leave_for, options_for_select(["Select One", "Full day", "Half day"],:disabled => ["Select One"], :selected => leave.leave_for), :class => 'genForm_dropBox' %>
          </div>

      </fieldset>
      </br>
      <button type="f.submit" class="btn btn-primary">Create Leave</button>
    <% end %>
  </div>
</div>
</br>